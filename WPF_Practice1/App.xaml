<Application x:Class="WPF_Practice1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_Practice1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Title" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Ubuntu"/>
        </Style>
        <Style x:Key="defineBTN" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <ControlTemplate TargetType="Button" x:Key="btnTemplate">
            <Border CornerRadius="3" BorderBrush="SlateGray"  BorderThickness="1" Background="Aquamarine"/>
        </ControlTemplate>
    </Application.Resources>
</Application>
